# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/course_management

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# Gemini AI API - Used for AI-powered course recommendations
# Get your free API key from: https://aistudio.google.com/app/apikey
# This enables the AI Recommendation Service (Port 3003) to generate personalized course suggestions
GEMINI_API_KEY=your_gemini_api_key_here

# Service Ports
AUTH_SERVICE_PORT=3001
COURSE_SERVICE_PORT=3002
AI_SERVICE_PORT=3003

# Redis Cache Expiry Times (in seconds)
REDIS_DEFAULT_EXPIRY=3600      # 1 hour
REDIS_COURSES_EXPIRY=1800      # 30 minutes
REDIS_SEARCH_EXPIRY=900        # 15 minutes
REDIS_SINGLE_EXPIRY=3600       # 1 hour
REDIS_STATS_EXPIRY=300         # 5 minutes