{
  "name": "course-management-service",
  "version": "1.0.0",
  "description": "Course Management Microservice with MongoDB, Elasticsearch, and Redis",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:with-redis": "start redis-server && timeout 3 && node server.js",
    "start:all": "concurrently \"redis-server\" \"node server.js\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "redis": "^4.6.8",
    "elasticsearch": "^16.7.3",
    "csvtojson": "^2.0.10"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
